<Window x:Class="LogicTable.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LogicTable"
        mc:Ignorable="d"
        Title="" Height="450" Width="800" ResizeMode="NoResize">
    <Grid>
        <TextBlock Name="intro" Margin="10" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Center" />
        <TextBlock Name="helper" Margin="149,30,149,0" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Center" Width="494" Height="105" Padding="10" />
        <TextBox Name="inputBox" Margin="150" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Center" AcceptsReturn="True" MinWidth="150" MaxWidth="600" TextChanged="InputBox_TextChanged" />
        <Button Name="generateButton" HorizontalAlignment="Center" Margin="0,250,0,0" VerticalAlignment="Top" Height="25" Click="GenerateButton_Click" />
        <TextBlock Name="error" Margin="149,0,149,10" TextWrapping="Wrap" HorizontalAlignment="Center" Width="494" Padding="10" Height="105" VerticalAlignment="Bottom" Foreground="Red" />
    </Grid>
</Window>